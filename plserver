#/bin/bash

WORKDIR=$(dirname $0)

servername="myserver"
echo $servername

docker ps -a | grep myserver | awk '{print $1}' | xargs docker stop
docker ps -a | grep myserver | awk '{print $1}' | xargs docker rm

docker run -d --name $servername -v "$WORKDIR/src":/tmp/plhw -w /tmp/plhw yyuzhong/pvamucs:PL $@
